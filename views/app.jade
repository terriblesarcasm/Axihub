html(data-ng-app='myApp')
	head
		base(href="/app")
		title Axihub
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		link(data-require='bootstrap-css@3.0.0', data-semver='3.0.0', rel='stylesheet', ng-href='http://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css')
		link(rel='stylesheet', ng-href='/css/main.css')
		script(src='//ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js')
		script(data-require='angular.js@1.2.x', src='https://ajax.googleapis.com/ajax/libs/angularjs/1.2.1/angular.js', data-semver='1.2.1')
		script(type='text/javascript', src='/js/ng-infinite-scroll.min.js')
		script(src='/js/app.js')
		script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0rc1/angular-route.min.js')

	body(ng-controller='MainCtrl', ng-init="user=#{JSON.stringify(user)}; ordervar='axihubtime'; filtervar=''")
