html(data-ng-app='myApp')
	head
		base(href="/app")
		title Axihub
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		link(rel='stylesheet', ng-href='/css/bootstrap.min.css')
		link(rel='stylesheet', ng-href='/css/main.css')
		script(src='/js/angular.min.js')
		script(src='/js/ng-infinite-scroll.min.js')
		script(src='/js/app.js')
		script(src='/js/angular-route.min.js')
		script(src='/js/ui-bootstrap-0.10.0.min.js')
		script(src='/js/angular-animate.min.js')

	body
		nav(class="navbar navbar-default", role="navigation")
			div(class="container")
				div(class="navbar-header")
					button(type="button", class="navbar-toggle", data-toggle="collapse", data-target=".navbar-collapse")
						span(class="sr-only") Toggle navigation
						span(class="icon-bar")
						span(class="icon-bar")
						span(class="icon-bar")
					a(class="navbar-brand") Axihub
				div(class="collapse navbar-collapse", ng-controller="HeaderController")
					ul(class="nav navbar-nav")
						li(ng-class="{ active: isActive('/app')}"): a(ng-href="/app") Feed
						li(ng-class="{ active: isActive('/account')}"): a(ng-href="/account") Account
		div(ng-view, ng-init="ordervar='axihubtime'; filtervar=''")